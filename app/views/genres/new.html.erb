<% if flash.any? %>
 <% flash.each do |name, msg| %>
    <div class="alert alert-<%= name %> bg-blue-100 border border-blue-400 text-blue-700 px-4 py-3 rounded relative" role="alert">
      <strong class="font-bold"><%= name.capitalize %>:</strong>
      <span class="block sm:inline"><%= msg %></span>
    </div>
 <% end %>
<% end %>

<div class="flex flex-col justify-between items-center">
  <h1 class="text-3xl font-bold mb-2">New Genre</h1>
  <%= form_for Genre.new do |form| %>
    <div class="flex flex-col space-y-4">
      <div class="flex flex-col space-y-2">
        <%= form.label :name, class: "text-lg font-semibold" %>
        <%= form.text_field :name, class: "text-black p-2 border border-gray-300 rounded-md" %>
      </div>
      <div class="flex justify-center gap-8">
        <%= link_to 'Back', root_path, class: "p-2 text-black bg-gray-300 rounded-md" %>
        <%= form.submit "Create Genre", class: "p-2 bg-blue-500 text-white rounded-md cursor-pointer" %>
      </div>
    </div>
  <% end %>
</div>