<div class="flex flex-col justify-between items-center">
  <h1 class="text-3xl font-bold">Edit Genre</h1>
  <%= form_for @genre do |form| %>
    <div class="flex flex-col space-y-4">
      <div class="flex flex-col space-y-2">
        <%= form.label :name, class: "text-lg font-semibold" %>
        <%= form.text_field :name, class: "text-black p-2 border border-gray-300 rounded-md" %>
      </div>
      <div class="flex justify-center gap-8">
        <%= link_to 'Back', genres_path, class: "p-2 text-black bg-gray-300 rounded-md" %>
        <%= form.submit "Confirm Changes", class: "p-2 bg-blue-500 text-white rounded-md cursor-pointer" %>
      </div>
    </div>
  <% end %>
</div>