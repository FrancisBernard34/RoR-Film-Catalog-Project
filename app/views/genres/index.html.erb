<div class="flex flex-col gap-10">
  <div>
    <% @genres.each do |genre| %>
      <ul class="flex flex-col my-4">
        <li class="text-2xl"><%= genre.name %></li>
      </ul>
      <div class="flex flex-row gap-4">
        <%= link_to 'Films with this genre', films_path(genre_id: genre.id), class: "text-yellow-500 hover:text-yellow-200 bg-[#1B141D] p-2 rounded-lg" %>
        <%= link_to "Edit name", edit_genre_path(genre), class: "text-yellow-500 hover:text-yellow-200 bg-[#1B141D] p-2 rounded-lg" %>
      </div>
    <% end %>
  </div>
  <div class="flex justify-center">
    <%= link_to 'Back', root_path, class: "p-2 text-black bg-gray-300 rounded-md" %>
  </div>
</div>
